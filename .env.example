# ملف إعدادات البيئة - نسخة للمطورين
# انسخ هذا الملف إلى .env واملأ القيم المناسبة

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost,0.0.0.0

# Currency
DEFAULT_CURRENCY=JOD

# Local PostgreSQL (for development)
USE_LOCAL_POSTGRES=True
LOCAL_PG_NAME=finspilot_local
LOCAL_PG_USER=postgres
LOCAL_PG_PASSWORD=your_postgres_password
LOCAL_PG_HOST=localhost
LOCAL_PG_PORT=5432

# Render PostgreSQL (for production)
RENDER=False
PG_NAME=finspilot
PG_USER=admin
PG_PASSWORD=generated_by_render
PG_HOST=generated_by_render
PG_PORT=5432

# Database URL (alternative for Render)
# DATABASE_URL=postgresql://user:password@host:port/database